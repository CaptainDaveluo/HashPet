<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_marginTop="20px"
        android:background="@color/colorWhite">



        <TextView
            android:id="@+id/tv_shopname"
            android:layout_width="wrap_content"
            android:layout_height="75px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44px"
            android:text="店铺名称"
            android:textColor="#323232"
            android:textSize="53px"/>
        <EditText
            android:id="@+id/et_shop_name"
            android:layout_toRightOf="@id/tv_shopname"
            android:layout_width="wrap_content"
            android:layout_height="75px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="44px"
            android:background="@null"
            android:layout_centerVertical="true"
            android:hint="输入店铺名称"
            android:maxLength="11"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@drawable/shape_register_editext"
            android:textSize="52px"/>

    </RelativeLayout>

    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="42px"
        android:background="@color/colorF0"/>

    <RelativeLayout
        android:id="@+id/parent_address"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:background="@color/colorWhite"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shopaddress"
            android:layout_width="wrap_content"
            android:layout_height="75px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44px"
            android:text="店铺地址"
            android:textColor="#323232"
            android:textSize="53px"/>
        <EditText
            android:id="@+id/et_shopaddress"
            android:layout_toRightOf="@+id/tv_shopaddress"
            android:layout_width="wrap_content"
            android:layout_height="75px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44px"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="输入店铺地址"
            android:maxLength="11"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@drawable/shape_register_editext"
            android:textSize="52px"/>
    </RelativeLayout>

    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="42px"
        android:background="@color/colorF0"/>

    <RelativeLayout
        android:id="@+id/parent_brief"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:background="@color/colorWhite"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv_shopbrief"
            android:layout_width="wrap_content"
            android:layout_height="75px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44px"
            android:text="店铺简介"
            android:textColor="#323232"
            android:textSize="53px"/>
        <EditText
            android:id="@+id/et_shopbrief"
            android:layout_width="wrap_content"
            android:layout_height="75px"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="44px"
            android:layout_toRightOf="@id/tv_shopbrief"
            android:background="@null"
            android:hint="设置店铺简介"
            android:maxLength="11"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@drawable/shape_register_editext"
            android:textSize="52px"/>

    </RelativeLayout>
    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="42px"
        android:background="@color/colorF0"/>
    <RelativeLayout
        android:id="@+id/parent_pass"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:background="@color/colorWhite"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="75px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44px"
            android:text="手机号"
            android:textColor="#323232"
            android:textSize="53px"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="75px"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="44px"
            android:layout_toRightOf="@id/tv_phone"
            android:background="@null"
            android:hint="请填写你的手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@drawable/shape_register_editext"
            android:textSize="52px"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

    </LinearLayout>

    <!--忘记了，登录-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42px"
        android:layout_marginRight="42px"
        android:layout_marginTop="80px"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/create_btn"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginLeft="35px"
            android:layout_weight="1"
            android:background="@drawable/shape_msg_btn_pet"
            android:gravity="center"
            android:onClick="onCreateShop"
            android:text="创建店铺"
            android:textColor="@color/colorWhite"
            android:textSize="60px"/>
    </LinearLayout>

</LinearLayout>