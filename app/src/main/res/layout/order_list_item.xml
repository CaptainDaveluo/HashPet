<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="30dp">
        <TextView
            android:text="单号:"
            android:id="@+id/order_item_num"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:text="日期:"
            android:id="@+id/order_item_time"
            android:textColor="@color/colorBlack"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#eeeeee"
        android:layout_height="1dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/show_order_img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:src="@drawable/img_error"
            android:layout_height="100dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/order_item_name"
                android:text="五月天【沉梦昂志】2050年演唱会 武汉站"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/order_item_address"
                android:paddingTop="5dp"
                android:maxLines="2"
                android:textColor="@color/colorBlack"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="收货地址"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="16.5sp"
                android:textStyle="bold"
                android:id="@+id/show_order_price"
                android:layout_marginTop="15dp"
                android:textColor="@color/ic_taobao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lines="1"
                android:text="￥100000.00" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#eeeeee"
        android:layout_height="1dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <TextView
            android:text="订单状态:"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/order_item_status"
            android:textColor="@color/black"
            android:text="已完成"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/order_item_option"
                android:layout_gravity="right"
                android:text="发货"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_msg_btn_pet"
                android:layout_marginRight="5dp"
                android:layout_width="100dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>