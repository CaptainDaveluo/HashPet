<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header_address"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#11BDA5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/top_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:layout_marginLeft="42px"
            android:layout_marginTop="0px"
            android:layout_marginBottom="52px"
            android:scaleType="centerCrop"
            android:src="@drawable/circle_back"/>

        <TextView
            android:id="@+id/top_text"
            android:text="确认地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"/>
    </RelativeLayout>

    <RelativeLayout

        android:layout_below="@id/header_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/line_bar_a"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="10dp"
            android:background="@drawable/line_bar"
            >

        </View>
        <LinearLayout
            android:id="@+id/address_info"
            android:layout_below="@id/line_bar_a"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:text="谢小鹏"
                android:id="@+id/confirm_name"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="182****8665"
                android:id="@+id/confirm_phone"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/confirm_address_detail"
            android:layout_below="@+id/address_info"
            android:text="浙江省 杭州市 余杭区鸬鸟镇太平山村太公堂22组13号"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="修改"
            android:id="@+id/btn_update"
            android:background="@color/white"
            android:layout_below="@id/confirm_address_detail"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <View
            android:id="@+id/line_bar_b"
            android:layout_below="@id/btn_update"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="10dp"
            android:background="@drawable/line_bar"
            >

        </View>
    </RelativeLayout>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_confirm_address"
        android:background="@drawable/shape_pay"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:text="下一步"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="28sp"
        android:layout_height="50dp" />
</RelativeLayout>
