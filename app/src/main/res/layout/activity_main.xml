<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.debla.hashpet.activities.MainActivity">



    <android.support.v4.view.ViewPager
        android:id="@+id/index_viewpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/index_menu">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/index_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:id="@+id/tab_index"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_home"
                android:layout_width="80px"
                android:layout_height="70px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:background="@drawable/ic_show"/>
            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21px"
                android:layout_gravity="center"
                android:text="首页"
                android:textColor="#999999"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_market"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_buy"
                android:layout_width="80px"
                android:layout_height="70px"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_bottom_share"/>

            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="21px"
                android:text="商城"
                android:textColor="#999999"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_service"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_service"
                android:layout_width="80px"
                android:layout_height="70px"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_service"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="21px"
                android:text="服务"
                android:textColor="#999999"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_mine"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_mine"
                android:layout_width="80px"
                android:layout_height="70px"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_me"/>

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="21px"
                android:text="我的"
                android:textColor="#999999"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
