<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/pro_man_banner"
        android:layout_width="match_parent"
        android:background="@color/colorBlue"
        android:layout_height="180dp">
        <com.debla.hashpet.Utils.CircleImageView
            android:id="@+id/pro_shop_head"
            android:src="@drawable/default_pet_info_icon"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:layout_below="@id/pro_shop_head"
            android:text="xxx的店铺"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <!--店家信息列表-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#bbbbbb"
                android:layout_height="1dp">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/store_basic_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/basic_info"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <EditText
                    android:hint="店铺名称"
                    android:textSize="20sp"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="200dp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/shape_register_editext"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/store_offline_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/offline_service"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <EditText
                    android:hint="商家联系方式"
                    android:textSize="20sp"
                    android:layout_margin="10dp"
                    android:layout_width="200dp"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:textCursorDrawable="@drawable/shape_register_editext"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/store_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/store_address"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <EditText
                    android:hint="商家地址"
                    android:textSize="20sp"
                    android:background="@null"
                    android:layout_margin="10dp"
                    android:layout_width="200dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:textCursorDrawable="@drawable/shape_register_editext"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:hint="门店服务"
                    android:textSize="16sp"
                    android:background="@null"
                    android:layout_margin="10dp"
                    android:layout_width="200dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/colorGray"
                android:layout_height="1dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/service_clean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:hint="萌宠洗护"
                    android:textSize="20sp" />
                <Switch
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/service_scult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:hint="萌宠造型"
                    android:textSize="20sp" />
                <Switch
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/service_care"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:hint="萌宠寄养"
                    android:textSize="20sp" />
                <Switch
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/service_medical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:hint="萌宠医疗"
                    android:textSize="20sp" />
                <Switch
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:text="保存"
                android:id="@+id/store_info_save"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/shape_next"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>